@model Vets.Models.Veterinarios

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Veterinarios</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumCedulaProf)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumCedulaProf)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fotografia)
        </dt>
        <dd class="col-sm-10">
            <img src="~/Imagens/Vets/@Model.Fotografia" height="50" alt="imagem do veterinario @Model.Nome" title="@Model.Nome" />
        </dd>
    </dl>
</div>

<!--outra linha de comentario-->
@*Adicionar as consultas do veterinario*@
<h4>Lista de Consultas associadas ao/à @Model.Nome</h4>

@if (Model.Consultas.Count == 0)
{
    <p>Não há consultas associadas ao\à veterinário(a).</p>
}

<table class="table">
    <tr>
        <th>Data da Consulta</th>
        <th>Animal</th>
        <th>Nome do Dono</th>
    </tr>
    @foreach (var consulta in Model.Consultas) //listar todas as consultas associadas ao veterinario que esta em exibição
    {
        <tr>
            <td>@consulta.Data</td>
            <td>@consulta.Animal.Nome</td>
            <td>@consulta.Animal.Dono.Nome</td>
        </tr>

    }

</table>

<br />


<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
