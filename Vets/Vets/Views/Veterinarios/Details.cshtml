@model Vets.Models.Veterinarios

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Veterinarios</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumCedulaProf)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumCedulaProf)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fotografia)
        </dt>
        <dd class="col-sm-10">
            <img src="~/Imagens/Vets/@Model.Fotografia" height="50" alt="imagem do veterinario @Model.Nome" title="@Model.Nome" />
        </dd>
    </dl>
</div>

<h4>Lista de Consultas associadas ao/à @Model.Nome</h4>
<table>
    <tr>
        <th>Data da Consulta</th>
        <th>Animal</th>
        <th>Nome do Dono</th>
    </tr>
    @foreach (var consulta in Model.Consultas) { }
    <tr>
        <td>Data da Consulta</td>
        <td>Animal</td>
        <td>Nome do Dono</td>
    </tr>
</table>




<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
